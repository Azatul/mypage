    <h1 class="text-4xl font-bold mb-4">Welcome to the Portal</h1>
    <p class="text-gray-700 mb-6">Choose how you want to access the system:</p>

    <div class="grid gap-4">
      <.link navigate={~p"/users/log_in"} class="bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg block">
        Login as User
      </.link>
      <.link navigate={~p"/users/register"} class="text-blue-700 underline">Register as User</.link>
      <.link navigate={~p"/admins/log_in"} class="bg-green-600 hover:bg-green-700 text-white py-2 rounded-lg block">
        Login as Admin
      </.link>
      <.link navigate={~p"/admins/register"} class="text-green-700 underline">Register as Admin</.link>
